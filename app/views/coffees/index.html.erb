<div class="container mt-5">
  <h1>Coffee Store</h1>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <h2>Add Coffee</h2>
  <%= form_with(model: @coffee, local: true) do |form| %>
    <div class="form-row">
      <div class="form-group col-md-4">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group col-md-4">
        <%= form.label :flavor %>
        <%= form.text_field :flavor, class: "form-control" %>
      </div>
      <div class="form-group col-md-4">
        <%= form.label :price %>
        <%= form.number_field :price, step: 0.01, class: "form-control" %>
      </div>
    </div>
    <%= form.submit "Add Coffee", class: "btn btn-primary" %>
  <% end %>

  <h2 class="mt-5">Coffee List</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Flavor</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @coffees.each do |coffee| %>
        <tr>
          <td><%= coffee.name %></td>
          <td><%= coffee.flavor %></td>
          <td><%= number_to_currency(coffee.price) %></td>
          <td>
            <%= link_to "Edit", edit_coffee_path(coffee), class: "btn btn-sm btn-warning" %>
            <%= link_to "Delete", coffee_path(coffee), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<div class="mb-3">
  <%= link_to "Export Coffees", export_coffees_path, class: "btn btn-success" %>
</div>
</div>
