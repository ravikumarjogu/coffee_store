<div class="container mt-5">
  <h2>Edit Coffee</h2>
  <%= form_with(model: @coffee, local: true) do |form| %>
    <div class="form-row">
      <div class="form-group col-md-4">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group col-md-4">
        <%= form.label :flavor %>
        <%= form.text_field :flavor, class: "form-control" %>
      </div>
      <div class="form-group col-md-4">
        <%= form.label :price %>
        <%= form.number_field :price, step: 0.01, class: "form-control" %>
      </div>
    </div>
    <%= form.submit "Update Coffee", class: "btn btn-success" %>
    <%= link_to 'Back', coffees_path, class: 'btn btn-secondary' %>
  <% end %>
</div>
